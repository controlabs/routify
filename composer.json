{
    "name": "controlabs/routify",
    "type": "library",
    "description": "PHP Uncoupled Routing",
    "keywords": ["PHP", "routing"],
    "homepage": "https://github.com/controlabs/routify",
    "license": [
        "MIT"
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpstan/phpstan": "^0.10.3"
    },
    "autoload": {
        "psr-4": {
            "Controlabs\\Routify\\": "src/Routify/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Controlabs\\Routify\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "cs": "phpcs --standard=PSR2 src",
        "test": "phpunit -c phpunit.xml --colors=always",
        "test-cover": "phpunit --coverage-text",
        "phpstan": "phpstan analyse src --level=7"
    }
}
